{
  "name": "@mymetaverse/mongolia",
  "version": "1.0.1",
  "description": "MongoDB internal framework",
  "packageManager": "yarn@3.3.0",
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "files": [
    "build",
    "src",
    "package.json"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "repository": "https://github.com/MyMetaverse/CoreOfMeta",
  "scripts": {
    "build": "tsup src/index.ts --format cjs --dts -d build --sourcemap --minify terser",
    "test": "jest --runInBand --detectOpenHandles --forceExit",
    "lint": "concurrently \"yarn:lint:*(!fix)\"",
    "lint:src": "eslint --ext .ts src",
    "lint:fix": "concurrently \"yarn:lint:*:fix\"",
    "lint:src:fix": "eslint --ext .ts --fix src"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/node": "^18.13.0",
    "@typescript-eslint/parser": "^5.51.0",
    "eslint": "^8.33.0",
    "jest": "^29.4.2",
    "nodemon": "^2.0.20",
    "terser": "^5.16.4",
    "testcontainers": "^9.1.3",
    "ts-jest": "^29.0.5",
    "tsup": "^6.6.3",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@mymetaverse/global": "*",
    "@mymetaverse/utilities": "*",
    "ddd-scaffold": "^1.5.11",
    "mongodb": "^5.1.0"
  },
  "bundledDependencies": [
    "@mymetaverse/global"
  ]
}
