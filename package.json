{
  "private": true,
  "packageManager": "yarn@3.3.0",
  "workspaces": [
    "packages/*",
    "shared/*"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "repository": "https://github.com/MyMetaverse/CoreOfMeta",
  "engines": {
    "node": ">=16",
    "yarn": ">=3.3.0"
  },
  "scripts": {
    "build": "turbo run build --filter='./packages/*'",
    "test": "turbo run test --filter='./packages/*'",
    "coverage": "turbo run test --filter='./packages/*' --coverage",
    "publish-packages": "changeset version && changeset publish",
    "create-package": "ts-node scripts/create-package/index.ts",
    "prettier:write": "prettier --write .",
    "prettier:check": "prettier --check .",
    "lint:check": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@types/node": "^18.13.0",
    "@types/yargs": "^17.0.22",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.53.0",
    "commitlint": "^17.2.0",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "latest",
    "eslint-plugin-tree-shaking": "latest",
    "husky": "^8.0.0",
    "jest": "^29.3.1",
    "prettier": "^2.8.4",
    "protoc": "^1.1.3",
    "ts-node": "^10.9.1",
    "ts-proto": "^1.135.3",
    "turbo": "^1.8.1",
    "typescript": "^4.9.4",
    "yargs": "^17.6.2"
  }
}
