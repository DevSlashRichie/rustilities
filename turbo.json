{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.ts", "test/**/*.ts"],
      "outputs": ["lib/**"],
      "outputMode": "full"
    },
    "lint": {
      "inputs": ["src/**/*.ts", "test/**/*.ts"],
      "outputs": []
    },
    "test": {
      "inputs": ["src/**/*.ts", "test/**/*.ts"]
    }
  }
}
