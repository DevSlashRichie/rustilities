{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": [".env", "tsconfig.json"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputMode": "full",
      "cache": true,
      "outputs": ["build"],
      "inputs": ["src/**/*.ts", "test/**/*.ts"]
    },
    "lint:check": {
      "inputs": ["src/**/*.ts", "test/**/*.ts"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["^build", "^test"],
      "inputs": ["src/**/*.ts", "test/**/*.ts"]
    }
  }
}
